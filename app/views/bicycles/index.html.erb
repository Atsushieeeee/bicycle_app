<body>
  <main>
    <div class="main-wrap">
      <header>
        <div class="header-wrap">
          <div class="site_title_header">
            <%= link_to image_tag('header-logo.png', class:'header-logo'), "/" %>
          </div>
        </div>
      </header>
      <div class="main-content">
        <div class="main-image">
          <%= image_tag 'logo.png', class:'main-logo' %>
        </div>
